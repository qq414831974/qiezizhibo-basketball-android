<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_host_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="主队"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_guest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="客队"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="30px"
            android:paddingRight="30px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="30px">

                <Button
                    android:id="@+id/btn_host_reduce1"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/login_button_bg"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="-1"
                    android:textColor="#0699E8"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_host_reduce2"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/login_button_bg"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="-2"
                    android:textColor="#0699E8"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_host_reduce3"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/login_button_bg"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="-3"
                    android:textColor="#0699E8"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="30px">

                <Button
                    android:id="@+id/btn_host_plus1"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/login_button_bg"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="+1"
                    android:textColor="#0699E8"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_host_plus2"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/login_button_bg"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="+2"
                    android:textColor="#0699E8"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_host_plus3"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/login_button_bg"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="+3"
                    android:textColor="#0699E8"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="30px"
            android:paddingRight="30px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="30px">

                <Button
                    android:id="@+id/btn_guest_reduce1"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/login_button_bg"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="-1"
                    android:textColor="#DD2C00"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_guest_reduce2"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/login_button_bg"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="-2"
                    android:textColor="#DD2C00"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_guest_reduce3"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/login_button_bg"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="-3"
                    android:textColor="#DD2C00"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="30px">

                <Button
                    android:id="@+id/btn_guest_plus1"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/login_button_bg"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="+1"
                    android:textColor="#DD2C00"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_guest_plus2"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/login_button_bg"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="+2"
                    android:textColor="#DD2C00"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_guest_plus3"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/login_button_bg"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="+3"
                    android:textColor="#DD2C00"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_pre_section"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/login_button_bg"
            android:gravity="center"
            android:padding="0dp"
            android:text="上一节"
            android:textColor="#0699E8"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_next_section"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/login_button_bg"
            android:gravity="center"
            android:padding="0dp"
            android:text="下一节"
            android:textColor="#0699E8"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>