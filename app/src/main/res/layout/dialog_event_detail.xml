<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:padding="30px"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_team"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:background="@drawable/ic_football" />

        <TextView
            android:id="@+id/tv_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_team"
            android:layout_alignStart="@id/iv_team"
            android:gravity="center"
            android:textSize="9sp"
            tools:text="测试球队2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_toStartOf="@+id/iv_player"
            android:layout_toEndOf="@id/iv_team"
            android:background="#000000" />

        <ImageView
            android:id="@+id/iv_player"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_user_picture" />

        <TextView
            android:id="@+id/tv_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_player"
            android:layout_alignStart="@id/iv_player"
            android:gravity="center"
            android:text="无"
            android:textSize="9sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_toStartOf="@id/iv_event"
            android:layout_toEndOf="@id/iv_player"
            android:background="#000000" />

        <ImageView
            android:id="@+id/iv_event"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_result_start" />

        <TextView
            android:id="@+id/tv_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_event"
            android:layout_alignStart="@id/iv_event"
            android:gravity="center"
            android:textSize="9sp"
            tools:text="进球" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="时间"
        android:textColor="#000000"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_time"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_time" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/text_view_round_border"
            android:gravity="center"
            android:minWidth="100dp"
            android:paddingHorizontal="5dp"
            tools:text="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_param"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="换上"
        android:textColor="#000000"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="请选择"
        android:textColor="#0059CC"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="描述"
        android:textColor="#000000"
        android:visibility="gone"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_remark"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/text_view_round_border"
        android:visibility="gone"
        android:lines="1" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/login_button_bg"
        android:text="确定"
        android:textColor="#0699E8"
        android:textSize="14sp" />

</LinearLayout>